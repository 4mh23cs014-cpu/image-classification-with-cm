# Auto detect text files and normalize line endings to LF
* text=auto

# Shell scripts
*.sh text eol=lf

# Python
*.py text eol=lf

# Windows batch/cmd
*.bat text eol=crlf
*.cmd text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# JSON, YAML, Config
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
Procfile text eol=lf
runtime.txt text eol=lf

# HTML/CSS/JS
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
